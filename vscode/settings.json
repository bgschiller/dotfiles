{
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.location": "hidden",
  "files.trimTrailingWhitespace": true,
  "window.nativeFullScreen": true,
  "window.zoomLevel": 1,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "workbench.sideBar.location": "right",
  "editor.minimap.enabled": false,
  "workbench.tips.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.fontSize": 13,
  "editor.lineHeight": 0,
  "editor.suggestFontSize": 16,
  "terminal.integrated.fontSize": 14,
  "editor.fontFamily": "FuraMono Nerd Font mono, Monaco, monospace",
  "editor.fontLigatures": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.blame.format": "${message|30} ${id} ${agoOrDateShort|4-}",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "workbench.colorTheme": "Catppuccin Mocha",
  "editor.autoSurround": "never",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingComments": "never",
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",
  "gitlens.launchpad.indicator.enabled": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "[rust]": {
    "editor.defaultFormatter": "ms-vsliveshare.vsliveshare"
  },
  "rewrap.wrappingColumn": 100,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // we try to make semantic highlighting look good
  "editor.semanticHighlighting.enabled": true,
  // prevent VSCode from modifying the terminal colors
  "terminal.integrated.minimumContrastRatio": 1,
  // make the window's titlebar use the workbench colors
  "window.titleBarStyle": "custom",
  "typescript.tsserver.log": "off",
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "editor.lineNumbers": "on",
  "vim.disableExtension": false,
  "vim.normalModeKeyBindingsNonRecursive": [
    // Use s to enter easymotion mode, not <leader><leader>s
    { "before": ["s"], "after": ["<leader>", "<leader>", "s"] }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.actions.quickOpen"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "y"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["<leader>", "c", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["[", "e"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["]", "e"],
      "commands": ["editor.action.marker.prev"]
    }
  ],
  "git.autofetch": true,
  "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
  "cursor.composer.shouldAllowCustomModes": true
}
