[
  /**
   * Panels
   **/
  {
    "key": "cmd+k cmd+e",
    "command": "workbench.view.explorer"
  },
  {
    "key": "cmd+k cmd+g",
    "command": "workbench.view.scm"
  },
  {
    "key": "cmd+k cmd+d",
    "command": "workbench.view.debug"
  },
  {
    "key": "cmd+k cmd+x",
    "command": "workbench.extensions.action.showEnabledExtensions"
  },
  {
    "key": "cmd+k cmd+c",
    "command": "workbench.action.chat.openInSidebar",
    "when": "chatIsEnabled"
  },
  {
    "key": "cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "cmd+e",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.toggleTerminal"
  },

  /**
   * Pane Navigation
   */
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },

  /**
   * editing
   */
  {
    "key": "ctrl+j",
    "command": "editor.action.joinLines",
    "when": "editorTextFocus && vim.mode != 'Normal' && vim.mode != 'Insert'"
  },

  /**
   * vim resets
   */
  {
    "key": "ctrl+b",
    "command": "cursorPageUp"
  },
  { "key": "ctrl+d", "command": "cursorPageDown" },
  { "key": "ctrl+o", "command": "workbench.action.navigateBack" },
  { "key": "ctrl+i", "command": "workbench.action.navigateForward" },
  {
    "key": "q",
    "when": "sideBarFocus && !inputFocus",
    "command": "workbench.action.closeSidebar"
  },

  /**
   * Toggle Font Size
   **/
  {
    "key": "cmd+k cmd+k",
    "when": "editorTextFocus",
    "command": "toggle",
    "args": {
      "id": "line-numbering",
      "value": [
        { "editor.lineNumbers": "on" },
        { "editor.lineNumbers": "relative" }
      ]
    }
  }
]
